{
  "name": "darinchambers.com",
  "version": "0.15.0",
  "description": "Terminal-inspired personal website showcasing AI and software engineering expertise",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "build": "tsc --project tsconfig.build.json && vite build",
    "preview": "vite preview",
    "deploy": "pnpm build && gh-pages -d dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:run": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\" \"tests/**/*.{ts,tsx}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\" \"tests/**/*.{ts,tsx}\" \"*.{json,md}\"",
    "type-check": "tsc --noEmit",
    "type-coverage": "type-coverage --at-least 95",
    "validate": "pnpm type-check && pnpm lint && pnpm format:check && pnpm test:run",
    "update-docs": "node scripts/update-docs.js",
    "prepare": "husky"
  },
  "keywords": [
    "terminal",
    "portfolio",
    "ai",
    "typescript"
  ],
  "author": "Darin Chambers",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=-1",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/figlet": "^1.7.0",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/ui": "^4.0.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "gh-pages": "^6.3.0",
    "glob": "^10.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "type-coverage": "^2.29.7",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.1",
    "vitest": "^4.0.4"
  },
  "dependencies": {
    "dompurify": "^3.3.0",
    "figlet": "^1.9.3",
    "marked": "^17.0.1"
  }
}
