# Cloudflare Pages Headers Configuration
# These headers are applied to all routes by Cloudflare Pages
# See: https://developers.cloudflare.com/pages/platform/headers/

/*
  # Content Security Policy - Strict XSS Protection
  # Prevents inline scripts, eval(), and unsafe content execution
  # Google Fonts: style-src allows fonts.googleapis.com, font-src allows fonts.gstatic.com
  Content-Security-Policy: default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data:; font-src 'self' https://fonts.gstatic.com; connect-src 'self'; base-uri 'self'; form-action 'self' mailto:; frame-ancestors 'none'; upgrade-insecure-requests

  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff

  # Enable XSS filter in browsers (legacy support)
  X-XSS-Protection: 1; mode=block

  # Prevent clickjacking attacks
  X-Frame-Options: DENY

  # Referrer policy - only send origin for cross-origin requests
  Referrer-Policy: strict-origin-when-cross-origin

  # Permissions policy - restrict feature access
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=()

  # HSTS - Force HTTPS for 1 year (including subdomains)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Cache control for HTML (no caching to ensure fresh content)
  Cache-Control: no-cache, no-store, must-revalidate

# Cache static assets for 1 year (content-hashed filenames ensure freshness)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts for 1 year
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 year
/images/*
  Cache-Control: public, max-age=31536000, immutable
